<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/graylight" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:gravity="left|center"
        android:text="请选择您的注册角色" />

    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:background="@color/white" >

      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/reg2_ower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通会员"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:drawableLeft="@drawable/reg2_check" />


            <TextView
                android:id="@+id/reg2_designer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/reg2_check"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="设计师  " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

             <TextView
                android:id="@+id/reg2_labor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工长  "
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:drawableLeft="@drawable/reg2_check" />


            <TextView
                android:id="@+id/reg2_superior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/reg2_check"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="监理    " />
        </LinearLayout>
    </LinearLayout>

    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textColor="@color/gray"
                android:text="QQ  " />

            <EditText
                android:id="@+id/reg2_qq_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="540392838"
                android:textColor="@color/black" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <ImageView 
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_marginLeft="20dp"
	        android:background="@color/gray"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textColor="@color/gray"
                android:text="选择城市" />

            <EditText
                android:id="@+id/reg2_city_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="上海"
                android:textColor="@color/black"
                android:drawableRight="@drawable/arrow2" >
                <requestFocus />
            </EditText>

        </LinearLayout>
    </LinearLayout>
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <ProgressBar
        android:id="@+id/reg2_progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <Button
        android:id="@+id/reg2_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@drawable/feedback_o"
        android:text="完成注册" />

</LinearLayout>