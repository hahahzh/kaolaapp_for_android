<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:scrollbars="none">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/graylight"
        android:layout_marginTop="10dp"/>

   <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:background="@color/white"
	    android:orientation="horizontal" >
    
	   <ImageView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignParentLeft="true"
	       android:layout_alignParentTop="true"
	       android:layout_marginTop="10dp"
	       android:id="@+id/score_avatar"
	       android:src="@drawable/avatar1"/>
	   
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="10dp"
	       android:layout_toRightOf="@id/score_avatar"
	       android:id="@+id/score_name"
	       android:textSize="20sp"
	       android:textStyle="bold"
	       android:text="张珊"/>
	   
	   <TextView 
	       android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_toRightOf="@id/score_name"
           android:id="@+id/score_job"
           android:background="@drawable/score_job_bg"
           android:textSize="16sp"
           android:layout_marginLeft="5dp"
           android:text="设计师"/>
	   
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="10dp"
	       android:layout_toRightOf="@id/score_avatar"
	       android:layout_below="@id/score_name"
	       android:id="@+id/score_cases"
	       android:textSize="16sp"
	       android:textColor="@color/gray"
	       android:text="项目：杨浦小区"/>
	   
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="10dp"
	       android:layout_toRightOf="@id/score_avatar"
	       android:layout_below="@id/score_cases"
	       android:textSize="14sp"
	       android:textColor="@color/gray"
	       android:text="历时：5天"/>
    </RelativeLayout>
    
   <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/graylight"/>
   <TextView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
       android:layout_marginLeft="10dp"
       android:textSize="20dp"
       android:textStyle="bold"
       android:text="给TA评分"/>
   
   <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/graylight"/>
   
   <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:background="@color/white"
       android:paddingLeft="10dp"
       android:paddingTop="10dp"
       android:paddingBottom="10dp">
	   
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_alignParentEnd="true"
           android:layout_marginRight="130dp"
           android:id="@+id/score_special_current_score"
           android:text="0"
           android:textSize="16dp"
           android:layout_marginLeft="5dp"
           android:textColor="@color/green"/>
       
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_gravity="center"
	       android:layout_alignParentLeft="true"
           android:layout_marginTop="5dp"
	       android:layout_below="@id/score_special_current_score"
	       android:text="专业水平"
	       android:id="@+id/score_special_txt"
	       android:textSize="16dp"
	       android:textColor="@color/gray"/>

	   <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:text="0"
           android:layout_marginTop="5dp"
           android:textSize="16dp"
           android:layout_toRightOf="@id/score_special_txt"
           android:layout_below="@id/score_special_current_score"
           android:id="@+id/score_special_score_begin"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="5dp"
           android:textColor="@color/gray"/>
	   
	   <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="10"
           android:layout_marginTop="5dp"
           android:layout_below="@id/score_special_current_score"
           android:layout_alignParentEnd="true"
           android:textSize="16dp"
           android:id="@+id/score_special_socre_end"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="10dp"
           android:textColor="@color/gray"/>
	   
	   <SeekBar
	       android:id="@+id/score_seekbar_special"
	       android:layout_gravity="center"
	       android:layout_toRightOf="@id/score_special_score_begin"
	       android:layout_toLeftOf="@id/score_special_socre_end"
	       android:layout_below="@id/score_special_current_score"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content" />
	     
   </RelativeLayout>
   
   <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/graylight"/>
   
   <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:background="@color/white"
       android:paddingLeft="10dp"
       android:paddingTop="10dp"
       android:paddingBottom="10dp">
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_alignParentEnd="true"
           android:layout_marginRight="130dp"
           android:id="@+id/score_attitude_current_score"
           android:text="0"
           android:textSize="16dp"
           android:layout_marginLeft="5dp"
           android:textColor="@color/green"/>
       
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_alignParentLeft="true"
           android:layout_marginTop="5dp"
           android:layout_below="@id/score_attitude_current_score"
           android:text="服务态度"
           android:id="@+id/score_attitude_txt"
           android:textSize="16dp"
           android:textColor="@color/gray"/>

       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:text="0"
           android:layout_marginTop="5dp"
           android:textSize="16dp"
           android:layout_toRightOf="@id/score_attitude_txt"
           android:layout_below="@id/score_attitude_current_score"
           android:id="@+id/score_attitude_score_begin"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="5dp"
           android:textColor="@color/gray"/>
       
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="10"
           android:layout_marginTop="5dp"
           android:layout_below="@id/score_attitude_current_score"
           android:layout_alignParentEnd="true"
           android:textSize="16dp"
           android:id="@+id/score_attitude_socre_end"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="10dp"
           android:textColor="@color/gray"/>
       
       <SeekBar
           android:id="@+id/score_seekbar_attitude"
           android:layout_gravity="center"
           android:layout_toRightOf="@id/score_attitude_score_begin"
           android:layout_toLeftOf="@id/score_attitude_socre_end"
           android:layout_below="@id/score_attitude_current_score"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       
   </RelativeLayout>
   
   <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/graylight"/>
   <TextView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
       android:layout_marginLeft="10dp"
       android:textSize="20dp"
       android:textStyle="bold"
       android:text="写评语"/>
   
   <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/graylight"/>
   
   <EditText 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:minLines="5"
       android:paddingTop="10dp"
       android:paddingLeft="10dp"
       android:gravity="left|top"
       android:background="@color/white"
       android:id="@+id/score_feedback"
       android:hint="给  TA 一些评价吧~"/>
   
   <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/graylight"/>
   
   <Button 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="10dp"
         android:layout_marginBottom="30dp"
         android:background="@drawable/feedback_o"
         android:id="@+id/score_ok"
         android:text="确定"/>

</LinearLayout>
</ScrollView>
