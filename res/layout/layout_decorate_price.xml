<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#EEEEEE" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.09"
        android:background="@drawable/price_bg_1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/decorate_price_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="板材" />

            <TextView
                android:id="@+id/decorate_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/decorate_price_title1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="100" />

            <TextView
                android:id="@+id/decorate_price_unit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/decorate_price_title1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/decorate_price1"
                android:text="元/每张" />

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                layout="@layout/layout_add_sub" />

            <TextView
                android:id="@+id/decorate_price_total_unit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="元" />

            <TextView
                android:id="@+id/decorate_price_total1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/decorate_price_total_unit1"
                android:text="100" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/decorate_price_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="墙砖" />

            <TextView
                android:id="@+id/decorate_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/decorate_price_title2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="50" />

            <TextView
                android:id="@+id/decorate_price_unit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/decorate_price_title2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/decorate_price2"
                android:text="元/m2" />

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                layout="@layout/layout_add_sub" />

            <TextView
                android:id="@+id/decorate_price_total_unit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="元" />

            <TextView
                android:id="@+id/decorate_price_total2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/decorate_price_total_unit2"
                android:text="50000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/decorate_price_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="板材" />

            <TextView
                android:id="@+id/decorate_price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/decorate_price_title3"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="100" />

            <TextView
                android:id="@+id/decorate_price_unit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/decorate_price_title3"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/decorate_price3"
                android:text="元/每张" />

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                layout="@layout/layout_add_sub" />

            <TextView
                android:id="@+id/decorate_price_total_unit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="元" />

            <TextView
                android:id="@+id/decorate_price_total3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/decorate_price_total_unit3"
                android:text="100" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/decorate_price_title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="板材" />

            <TextView
                android:id="@+id/decorate_price4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/decorate_price_title4"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="100" />

            <TextView
                android:id="@+id/decorate_price_unit4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/decorate_price_title4"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/decorate_price4"
                android:text="元/每张" />

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                layout="@layout/layout_add_sub" />

            <TextView
                android:id="@+id/decorate_price_total_unit4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="元" />

            <TextView
                android:id="@+id/decorate_price_total4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/decorate_price_total_unit4"
                android:text="100" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="预算结果"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/price_bg_1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="材料合计" />

            <TextView
                android:id="@+id/price_main_matirial_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="元" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/price_main_matirial_total"
                android:text="50300" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="辅料价格" />

            <TextView
                android:id="@+id/price_sub_matirial_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="元" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/price_sub_matirial_total"
                android:text="4000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="人工价格" />

            <TextView
                android:id="@+id/price_label_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="元" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/price_label_total"
                android:singleLine="true"
                android:text="25000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="合计工程总价" />

            <TextView
                android:id="@+id/price_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="元" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/price_total"
                android:singleLine="true"
                android:text="79300" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="材料合计:表格中各项的汇总\n辅料价格：估算为材料价格×15%\n人工价格：估算按每平方250元，实际情况请与工长协商\n合计工程总价：材料合计+人工价格+辅料价格" />

    <Button
        android:id="@+id/decorate_save_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/decorate_yellow_bg"
        android:gravity="center"
        android:text="保存报价" />
</LinearLayout>

</ScrollView>