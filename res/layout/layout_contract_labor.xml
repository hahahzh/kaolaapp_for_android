<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="left"
        android:text="装饰施工项目概况"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/layout_border">
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:text="业主姓名"/>
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_marginLeft="10dp"
	        android:textStyle="bold"
	        android:text="张曼曼"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_border"
        android:layout_gravity="center"
        android:layout_marginTop="-1dp"
        android:orientation="horizontal"
        android:id="@+id/contract_address_ll">
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="施工地址"
	        android:layout_gravity="center"
	        android:gravity="center"/>
        
        <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_gravity="center"
	        android:textStyle="bold"
	        android:text="上海   上海市  闸北区  广中西路"
	        android:drawableRight="@drawable/forward"/>
        
    </LinearLayout>
    
    <LinearLayout 
               android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_border"
        android:layout_gravity="center"
        android:layout_marginTop="-1dp"
        android:orientation="horizontal">
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="承包方式"
	        android:layout_gravity="center"
	        android:gravity="center"/>
        
        <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:text="包工包料"
	        android:drawableRight="@drawable/forward"/>
        
    </LinearLayout>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="工程期限"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/layout_border">
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="开工日期"
	        android:layout_gravity="center"
	        android:gravity="center"/>
        
        <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:gravity="left"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:text="2015年4月22日"
	        android:drawableRight="@drawable/forward"/>
        
    </LinearLayout>
    
    <LinearLayout 
              android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/layout_border"
        android:layout_marginTop="-1dp">
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="竣工日期"
	        android:layout_gravity="center"
	        android:gravity="center"/>
        
        <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:gravity="left"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:text="2015年6月22日"
	        android:drawableRight="@drawable/forward"/>
        
    </LinearLayout>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="工程价款"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/layout_border">
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="工程总价款"
	        android:layout_gravity="center"
	        android:gravity="center"/>
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:gravity="left"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:text="90000"/>
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="元"
	        android:layout_gravity="center"
	        android:gravity="center"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/layout_border"
        android:layout_marginTop="-1dp">
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="第一次付款(建议为20%)"
	        android:layout_gravity="center"
	        android:gravity="center"/>
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:gravity="left"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:text="18000"/>
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="元"
	        android:layout_gravity="center"
	        android:gravity="center"/>
        </LinearLayout>
        
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/layout_border"
        android:layout_marginTop="-1dp">
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="第二次付款(建议为30%)"
	        android:layout_gravity="center"
	        android:gravity="center"/>
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:gravity="left"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:text="27000"/>
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="元"
	        android:layout_gravity="center"
	        android:gravity="center"/>
        </LinearLayout>
        
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/layout_border"
        android:layout_marginTop="-1dp">
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="第三次付款(建议为30%)"
	        android:layout_gravity="center"
	        android:gravity="center"/>
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:gravity="left"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:text="27000"/>
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="元"
	        android:layout_gravity="center"
	        android:gravity="center"/>
        </LinearLayout>
        
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/layout_border"
        android:layout_marginTop="-1dp">
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="第四次付款(建议为20%)"
	        android:layout_gravity="center"
	        android:gravity="center"/>
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:gravity="left"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:text="18000"/>
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="元"
	        android:layout_gravity="center"
	        android:gravity="center"/>
        </LinearLayout>

     <Button
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    android:layout_marginTop="50dp"
	    android:layout_gravity="center"
	    android:background="@drawable/feedback_o"
	    android:text="提交" />
</LinearLayout>
</ScrollView>