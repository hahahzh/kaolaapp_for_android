<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
   <ImageView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:layout_marginTop="10dp"
       android:id="@+id/contact_designer_avatar"
       android:src="@drawable/avatar1"/>
   
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:layout_toRightOf="@id/contact_designer_avatar"
       android:id="@+id/contact_designer_name"
       android:text="钟晓晓"/>
   
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:layout_toRightOf="@id/contact_designer_avatar"
       android:layout_below="@id/contact_designer_name"
       android:id="@+id/contact_designer_cases"
       android:text="案例数:8"/>
   
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:layout_toRightOf="@id/contact_designer_avatar"
       android:layout_below="@id/contact_designer_cases"
       android:text="专业：9.0    服务：9.0"/>
   
   <TextView 
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:layout_marginTop="10dp"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:background="@drawable/designer_price_bg"
       android:id="@+id/contact_designer_price"
       android:paddingLeft="5dp"
       android:paddingTop="5dp"
       android:text="100/m2"/>
   
   <ImageView 
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:layout_marginTop="5dp"
       android:layout_alignParentRight="true"
       android:src="@drawable/heart_no"
       android:layout_below="@id/contact_designer_price"
       android:id="@+id/contact_designer_heart"/>
    <TextView 
        android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:layout_marginTop="5dp"
       android:layout_alignParentRight="true"
       android:text="50"
       android:layout_below="@id/contact_designer_heart"/>

</RelativeLayout>
