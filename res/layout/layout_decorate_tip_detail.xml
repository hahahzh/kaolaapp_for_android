<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="match_parent"
   	 	android:layout_height="wrap_content"
   	 	android:background="#43CD80"
    	android:orientation="vertical">

        <TextView
            android:id="@+id/tips_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="【软装】装修中被人坑了也不知道的陷阱"
            android:textSize="20sp"
            android:textColor="@color/white" />

		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginLeft="10dp"
		        android:orientation="horizontal"
		        android:id="@+id/tips_detail_first"
		        android:layout_below="@id/tips_detail_title">
		        
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="5dp"
		            android:src="@drawable/clock_white"/>

		        <TextView
		            android:id="@+id/tips_item_date"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="20dp"
		            android:text="2015-03-19"
		            android:textColor="@color/white" />

		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="5dp"
		            android:src="@drawable/eye_white"
		            android:layout_gravity="center"/>

		         <TextView
		             android:id="@+id/tips_item_viewed"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_marginRight="20dp"
		             android:text="166"
		             android:textColor="@color/white" />

		    </LinearLayout>
    </LinearLayout>
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/tips_detail_image_preview"/>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:text="    装修是件很麻烦的事情,装修是件很麻烦的事情,装修是件很麻烦的事情,装修是件很麻烦的事情"/>

</LinearLayout>
