<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feedback_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/new_pwd_bg"
        android:orientation="vertical" >
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="0.61"
	    android:orientation="horizontal" >
        
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_weight="2"
	    android:ems="20"
	    android:gravity="left|center"
	    android:text="密码" />

    <EditText
        android:id="@+id/reset2_pwd_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:ems="10"
        android:gravity="left|center"
        android:inputType="textPassword"
        android:password="true"
        android:textColor="@color/black" >

        <requestFocus />
    </EditText>
    </LinearLayout>
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="0.61"
	    android:orientation="horizontal" >
        
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_weight="2"
	    android:ems="20"
	    android:gravity="left|center"
	    android:text="确认密码" />

    <EditText
        android:id="@+id/reset2_c_pwd_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:ems="10"
        android:gravity="left|center"
        android:inputType="textPassword"
        android:password="true"
        android:textColor="@color/black" >

        <requestFocus />
    </EditText>
    </LinearLayout>
	</LinearLayout>

    <Button
        android:id="@+id/reset2_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@drawable/feedback_o"
        android:text="确定" />

</LinearLayout>
