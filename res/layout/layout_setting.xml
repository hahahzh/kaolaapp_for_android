<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/setting_ll" >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/sgj_bg"
	    android:gravity="center"
	    android:orientation="vertical" >

		<ImageView
		    android:id="@+id/setting_logo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="center_horizontal|center_vertical"
		    android:src="@drawable/avatar_my" />

	</LinearLayout>
    
	<ImageView 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/gray"
	    android:layout_marginTop="10dp"/>

  	    <LinearLayout
  	        android:id="@+id/setting_l1"
  	        android:layout_width="match_parent"
  	        android:layout_height="wrap_content"
  	        android:paddingTop="10dp"
  	        android:paddingBottom="10dp"
  	        android:paddingLeft="20dp"
  	        android:paddingRight="10dp"
  	        android:background="@color/white"
  	        android:gravity="center"
  	        android:orientation="horizontal" >

  	        <TextView
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:layout_weight="1"
  	            android:gravity="left"
  	            android:text="昵称"
  	            android:textColor="@color/gray"
  	            android:textSize="20sp" >
  	        </TextView>

  	       <TextView
  	            android:id="@+id/setting_nickname_txt"
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:layout_weight="1"
  	            android:background="@null"
  	            android:ems="10"
  	            android:gravity="left|center"
  	            android:inputType="textPersonName"
  	            android:text="" />


  	    </LinearLayout>

  	    <ImageView 
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_marginLeft="20dp"
	        android:background="@color/gray"/>
  	    
  	    <LinearLayout
  	        android:id="@+id/setting_l2"
  	        android:layout_width="match_parent"
  	        android:layout_height="wrap_content"
  	        android:gravity="center"
  	        android:paddingTop="10dp"
  	        android:paddingBottom="10dp"
  	        android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:background="@color/white"
  	        android:orientation="horizontal" >

  	        <TextView
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:layout_weight="1"
  	            android:gravity="left"
  	            android:text="更改密码"
  	            android:singleLine="true"
  	            android:textColor="@color/gray"
  	            android:textSize="20sp" >
  	        </TextView>

  	        <EditText
                  android:id="@+id/setting_change_pwd"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:gravity="left|center"
                  android:inputType="textPassword"
                  android:drawableRight="@drawable/arrow"
                  android:text="" />
  	    </LinearLayout>
		
	<ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

	<Button
	    android:id="@+id/setting_submit_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    android:layout_marginTop="50dp"
	    android:layout_gravity="center"
	    android:background="@drawable/feedback_o"
	    android:text="保存" />
</LinearLayout>


